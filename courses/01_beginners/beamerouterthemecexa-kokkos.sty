% cexa-kokkos

\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{cexa-kokkos}{%
    \begin{beamercolorbox}[wd=\paperwidth, ht=1.5em, dp=0.75em, leftskip=1.5em]{frametitle}
        {\usebeamerfont{frametitle}\insertframetitle}%
        {\usebeamerfont{page number in head/foot}\usebeamercolor[fg]{page number in head/foot}~::~frame \insertframenumber/\inserttotalframenumber}%
    \end{beamercolorbox}
}

% Frame footline
\defbeamertemplate*{footline}{cexa-kokkos}{%
    \begin{beamercolorbox}[wd=\paperwidth, ht=1em, dp=0.5em, leftskip=1.5em, rightskip=1.5em]{title in head/foot}
        \hypersetup{allcolors=.}%
        \strut%
        {\usebeamerfont{title in head/foot}\usebeamercolor[fg]{title in head/foot}\insertshorttitle}%
        \ifx\insertsection\empty
        \else
            {\usebeamerfont{section in head/foot}\usebeamercolor[fg]{section in head/foot}~::~\insertsection}%
            \ifx\insertsubsection\empty
            \else
            {\usebeamerfont{subsection in head/foot}\usebeamercolor[fg]{subsection in head/foot}~::~\insertsubsection}%
            \fi
        \fi
        \hfill%
        \raisebox{-0.2em}{%
            \usebeamercolor[fg]{navigation symbols}%
            \insertslidenavigationsymbol%
            \insertframenavigationsymbol%
            \insertsubsectionnavigationsymbol%
            \insertsectionnavigationsymbol%
            \insertdocnavigationsymbol%
            \insertbackfindforwardnavigationsymbol%
        }%
    \end{beamercolorbox}
}

\mode<all>